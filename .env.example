PORT=3030
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=phi3
OLLAMA_NUM_CTX=4096
OLLAMA_EMBED_MODEL=nomic-embed-text

# Python FastAPI brain
PY_API_BASE=http://localhost:8000
PY_API_TIMEOUT_MS=8000
PY_API_PORT=8000

# Neo4j Graph Database (set these to your instance; no API key required)
# Examples:
# - Local: bolt://localhost:7687
# - Aura (bolt): neo4j+s://<your-instance>.databases.neo4j.io
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# IMAP email integration
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=you@example.com
IMAP_PASS=your-app-password
IMAP_TLS=true
IMAP_MAILBOX=INBOX

# SMTP for sending email (defaults to Gmail if unset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=you@example.com
SMTP_PASS=your-app-password
